    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "rebase": "git pull && git checkout staging && git pull && git rebase dev && git push && git checkout dev",
        "rebase:main": "git pull && git checkout master && git pull && git rebase staging && git push && git checkout dev",
        "db:push": "npx drizzle-kit push",
        "db:studio": "npx drizzle-kit studio",
        "format": "prettier --write \"**/*.{ts,js,jsx,tsx,md}\"",
        "prepare": "husky",
        "release": "pnpm build && changeset publish",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:unit": "jest --testPathPattern=__tests__/unit --coverage --coverageDirectory=coverage/unit",
        "test:integration": "jest --testPathPattern=__tests__/integration --coverage --coverageDirectory=coverage/integration"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "prettier --write",
            "eslint --fix"
        ],
        "*.{json,md,yml,yaml}": [
            "prettier --write"
        ]
    },
